page{
    background-color: #fff;
}
.slide-image{
    width:100%;
}
.category-container{
    height:90rpx;
    background: #ffffff;
    width:100%;
    white-space: nowrap;
}
.category-container.posNav{
    position: fixed;
    top:0;
    left:0;
    z-index:1000;
}
.category{
    display: inline-block;
    height: 90rpx;
    line-height:90rpx;
    padding:0rpx 50rpx;
    box-sizing: border-box;
}
.category.active{
    border-bottom:5rpx solid #ff5500;
    color: #ff5500;
}
.lister-container{
    width: 100%;
    overflow: hidden;
    padding:0rpx 15rpx;
    padding-bottom:100rpx;
    box-sizing: border-box;
}

.lister:last-child{
    border-bottom:none;
}

.lister{
    width: 100%;
    overflow: hidden;
    margin-top:15rpx;
    border-bottom:2rpx solid #e6e6e6;
}
.lister-img{
    width:35%;
    float: left;
}
.lister-img .image{
    width:100%;
}
.lister-content{
    width:63%;
    float: right;
    box-sizing: border-box;
}

.lister-content view{
    display: block;
    width:100%;
}
.lister-content .title{
    height: 100rpx;
    width:100%;
    line-height:50rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    color: rgb(48, 57, 66);
}
.desc .reserve_price{
    float: left;
    color: #999999;
    width:50%;
    font-size:25rpx;
}
.desc .volume{
    float: right;
    color: #999999;
    width:50%;
    font-size:25rpx;
}
.desc .label{
    display: inline-block;
    color: #999999;
    width:auto;
    font-size:25rpx;
}
.desc .final-price{
    display: inline-block;
    font-weight: bolder;
    font-size:35rpx;
    color: rgb(48, 57, 66);
    width:auto;
}
.desc .coupon-total{
    display: block;
    width:100%;
    height:40rpx;
    border-radius: 20rpx;
    background: #FFDFCF;
}
.coupon-desc{
    position: relative;
}
.desc .coupon-remain{
    position: absolute;
    top:0;
    left:0;
    display: block;
    height: 40rpx;
    background-color: #ff9000;
    border-radius: 20rpx;
    z-index:900;
    line-height:40rpx;
    color: #ffffff;
    font-size:20rpx;
    box-sizing: border-box;
}
.desc .coupon-msg{
    position: absolute;
    top:0;
    left:0;
    display: block;
    height: 40rpx;
    border-radius: 20rpx;
    z-index:901;
    line-height:40rpx;
    color: #ffffff;
    font-size:25rpx;
    box-sizing: border-box;
    padding-left:20rpx;
    font-weight: bold;
}