<view class="container">

    <view class="swiper-container">
        <swiper indicator-dots="{{true}}" autoplay="{{true}}">
            <block wx:for="{{imgUrls}}">
                <swiper-item>
                    <image src="{{item}}" class="slide-image" width="355" height="150"/>
                </swiper-item>
            </block>
        </swiper>
    </view>


    <scroll-view scroll-x class="category-container" style="width: 100%;">
        <view wx:for="{{category}}" data-id="{{item.favorites_id}}" class="category">{{item.favorites_title}}</view>
    </scroll-view>

</view>